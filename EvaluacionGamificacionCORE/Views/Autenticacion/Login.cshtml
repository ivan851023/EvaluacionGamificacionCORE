@{ Layout = ""; }


@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="CoreUI - Open Source Bootstrap Admin Template">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="CoreUI Bootstrap 4 Admin Template">
    <!-- <link rel="shortcut icon" href="assets/ico/favicon.png"> -->

    <title>Login</title>


    <link href="~/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/simple-line-icons.min.css" rel="stylesheet">

    <!-- Main styles for this application -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <script src="~/assets/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>


</head>

<body class="app flex-row align-items-center">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
        <form asp-controller="Autenticacion" asp-action="Login" method="post">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card-group">
                        <div class="card p-4">
                            <div class="card-body">
                                <h1>Login</h1>
                                <p class="text-muted">Ingresa con tu cuenta</p>
                                <div class="input-group mb-3 form-group">
                                    <span class="input-group-addon"><i class="icon-user"></i></span>
                                    <input type="text" asp-for="Documento" class="form-control" placeholder="Documento">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Documento" class="text-danger"></span>
                                </div>

                                <div class="input-group mb-4 form-group">
                                    <span class="input-group-addon"><i class="icon-lock"></i></span>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Contraseña">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <p class="text-danger">@ViewBag.ErrorMensaje</p>
                                </div>
                                <div class="row">
                                    <div class="col-6 form-group">
                                        <button type="submit" class="btn btn-primary px-4">Login</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                            <div class="card-body text-center">
                                <div>
                                    <h2>Inicio Sesion</h2>
                                    <p>No estas registrado, por favor registrate en el siguiente link</p>
                                    <a asp-action="Registro" asp-controller="Autenticacion" class="btn btn-primary active mt-3">Registro Nuevo!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

        <!-- Bootstrap and necessary plugins -->
        <script src="~/assets/js/popper.min.js"></script>
        <script src="~/assets/js/bootstrap.min.js"></script>
        
</body>
</html>