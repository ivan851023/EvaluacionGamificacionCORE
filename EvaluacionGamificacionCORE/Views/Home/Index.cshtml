@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;

}




<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="margin: 15px 0;">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/images/Fun1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Para mas informacion sobre la fundación tepa
                    <a class="btn btn-default" href="https://www.fundaciontepa.org/">
                        Leer más
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Fun2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Para mas informacion sobre la fundación huellitas
                    <a class="btn btn-default" href="https://huellitas.social/">
                        Leer más
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Fun3.svg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Para mas informacion sobre la fundación puppypets
                    <a class="btn btn-default" href="https://puppypets.com.co/">
                        Leer más
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Fun4.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Para mas informacion sobre la fundación adopta no compres
                    <a class="btn btn-default" href="https://www.adoptanocompres.org/">
                        Leer más
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


